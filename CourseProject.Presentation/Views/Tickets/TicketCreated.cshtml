@model string

@{
    ViewData["Title"] = "Ticket Created";
}

<h2>Ticket Created Successfully</h2>

<div class="alert alert-success">
    <p>Your ticket has been created successfully! You can view it in Jira at the link below:</p>
    <a href="@Model" target="_blank">@Model</a>
</div>

<div class="mt-4">
    <a href="@Url.Action("CreateTicket", "Tickets")" class="btn btn-secondary">Create Another Ticket</a>
    <a href="@Url.Action("GetUserTickets", "Tickets")" class="btn btn-primary">View My Tickets</a>
</div>