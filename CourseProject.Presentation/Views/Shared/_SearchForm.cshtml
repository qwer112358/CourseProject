@if (string.IsNullOrWhiteSpace(Model.SearchTerm))
{
}
else if (Model.FormTemplates != null && Model.FormTemplates.Any())
{
<h3 class="mt-4">Search Results for "@Model.SearchTerm"</h3>
<ul class="list-group">
    @foreach (var template in Model.FormTemplates)
    {
    <li class="list-group-item">
        <a asp-controller="FormTemplates" asp-action="Details" asp-route-id="@template.Id" class="text-decoration-none">
            @template.Title
        </a>
    </li>
    }
</ul>
}
else
{
<p class="mt-3">No templates found matching your search.</p>
}

